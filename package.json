{
  "name": "rss-o-matic",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "deploy": "rm -rf .nuxt && nuxt build && ./scripts/upload-sourcemaps.sh && npx wrangler d1 migrations apply DB --remote --config wrangler.jsonc && npx wrangler deploy --no-bundle --config .output/server/wrangler.json",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@nuxthub/core": "^0.10.6",
    "@posthog/ai": "^7.9.1",
    "cheerio": "^1.2.0",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "feed": "^5.2.0",
    "nanoid": "^5.1.6",
    "nuxt": "^4.3.1",
    "openai": "^6.22.0",
    "postal-mime": "^2.7.3",
    "posthog-js": "^1.352.1",
    "posthog-node": "^5.24.17",
    "unstorage": "^1.17.4",
    "vue": "^3.5.28",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^4.0.0",
    "@posthog/cli": "^0.6.1",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.7.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.5",
    "wrangler": "^4.67.0"
  }
}
